<body>


<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="/signup1" method="post">
			<h1>Create Account</h1>
			<div class="social-container">
				<button type="button" class="btn btn-outline-danger"><img src="img/google.jpeg" alt="" style="width:12px; margin-right:2px;"> Continue with Google</button>
			</div>
			<span class="text-danger" id="submit-error" style="color: red;"></span>
			<span class="text-danger" id="name-error" style="color: red;"></span>
			<input type="text" name="Name" id="contact-name" placeholder="Name" onkeyup="validateName()" />

			<span class="or" id="number-error" style="color: red;"></span>
			<input type="number" name="MobileNumber" id="contact-number" placeholder="Mobile number" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}"  onkeyup="validateNumber()" />

			<span class="or" id="email-error" style="color: red;"></span>
			<input type="email" name="Email" id="contact-email" placeholder="Email" onkeyup="validateEmail()" />

			<span class="or" id="password-error" style="color: red;"></span>
			<input type="password" name="Password" id="contact-password" placeholder="Password" onkeyup="validatePassword()" />

			<span class="or" id="confirmPassword-error" style="color: red;"></span>
			<input type="password" name="ConfirmPassword" id="confirmPassword" placeholder="Confirm-password" onkeyup="validateConfirmPassword()" />

			<span class="or" id="number-error" style="color: red;"></span>
			<input type="text" id="referal-code" placeholder="Referal Code" onkeyup="" />

			
			<input type="number" name="wallet" value="500" /hidden>

			<span class="or" id="submit-error"></span>
			<button class="btn" onclick="validateSignUp(event)">Sign Up</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form action="/login" method="post">
			<h1>Log In</h1>
			<div class="social-container">
				{{!-- <button type="button" class="btn btn-outline-danger"><img src="img/icons/google.png" alt="" style="width:12px; margin-right:2px;"> Continue with Google</button> --}}
			</div>
			<span class="or">or use your account</span>
			{{#if loginError}}
                <p style="color:red;">Invalid username or password</p>
                {{/if}}
			<input type="email" name="email" placeholder="Email" />
			<input type="password" name="password" placeholder="Password" />
			{{!-- <a href="/forgotpassword">Forgot your password?</a> --}}
			<button>Log In</button>
			<p>Or</p>
			<a class="btn ghost" href="/LoginWithOTPPage" style="background-color:rgb(247, 241, 241) ;" id="OTPLogin">Login With OTP</a>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal details</p>
				<button class="ghost" id="signIn">Log In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hi There!</h1>
				<p>Enter your personal details to open an account with us</p>
				<button class="ghost" id="signUp">Sign Up</button>
				
			</div>
		</div>
	</div>
</div>

