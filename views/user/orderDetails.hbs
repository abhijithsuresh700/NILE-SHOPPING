                <script>
                    function cancelOrder(orderId){
                         
Swal.fire({
   title: "Are you sure?",
    text: "Once deleted, product will be removed from the cart!",
    icon: "warning",
   showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then(async(result) => {
  if (result.isConfirmed) {
   await Swal.fire(
      'Deleted!',
      'Your file has been deleted.',
      'success',
  )
  
  }
})
                       
                        $.ajax({
                            url:"/cancelOrder",
                            method:"post",
                            data:{orderId}
                        }).then((response)=>{
                            if(response.cancel){
                                location.href="/orderDetails"
                            }
                        })

                    }
                </script>


