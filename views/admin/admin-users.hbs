<div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Users List</h1>
                    {{!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
                        For more information about DataTables, please visit the <a target="_blank"
                            href="https://datatables.net">official DataTables documentation</a>.</p> --}}

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3" class="row">
                            <h6 class="m-0 font-weight-bold text-primary">Detailed UserData</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="usertable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Sl No:</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Mobile Number</th>
                                            <th>Actions</th>
                                            
                                        </tr>
                                    </thead>
                                
                                    <tbody>
                                        {{#each userData}}
                                        <tr>
                                            <td>{{inc @index}}</td>
                                            <td>{{this.Name}}</td>
                                            <td>{{this.Email}}</td>
                                            <td>{{this.MobileNumber}}</td>
                                            <td>
                                {{#if this.status}}
                            <a href="/admin/block-user/{{this._id}}" role="button" class="btn btn-info" onclick="return confirm('Are u sure to Unblock: {{this.Name}}')">Unblock</a>
                            {{else}}
                            <a href="/admin/unblock-user/{{this._id}}" role="button" class="btn btn-danger" onclick="return confirm('Are u Sure to Block  : {{this.Name}}')">Block</a>
                            {{/if}}
                        </td>
                                        </tr>
                                         {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>

                    <script>
      $(document).ready(function () {
            $('#usertable').DataTable();
        });
    </script>